
@{
    ViewBag.Title = "Products";
}

<div class="row">
    <div class="col-md-12">
        <h2>Список товаров</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"><p>Название товара</p></th>
                    <th scope="col"><p>Описание</p></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var b in ViewBag.Products)
            {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Description</p></td>
            </tr>
            }
            </tbody>
        </table>
        @Html.ActionLink("Назад к списку магазинов", "Index", "Home")
    </div>
</div>